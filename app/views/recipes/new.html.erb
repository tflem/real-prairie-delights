<h1>New Recipe</h1>
<%= form_for(@recipe) do |f| %>
  <p>
    <%= f.label :recipe_name, "Recipe Name" %><br>
    <%= f.text_field :recipe_name %>
  </p>

  <p>
    <%= f.label :serving_size, "Serving Size" %><br>
    <%= f.text_field :serving_size %>
  </p>

  <p>
    <%= f.label :ingredients, "Ingredients" %><br>
    <%= f.text_area :ingredients %>
  </p>

  <p>
    <%= f.label :directions, "Directions" %><br>
    <%= f.text_area :directions %>
  </p>

  <%= f.submit %>
<% end %>