<% title(@recipe.recipe_name, 'Recipes')%>

<h2 class='text-4xl px-2 py-2 mb-2'><%= @recipe.recipe_name %></h2>

<div class='p-10 flex flex-col justify-center max-w-auto rounded bg-teal-200'>
  <div class='text-sm uppercase font-bold text-teal-500 mb-4'><%= 'Serving Size '%><%= @recipe.serving_size %></div>
  <div class='md:text-2xl text-2xl font-bold text-teal-700'>
    <ul>
      <% @recipe.ingredients.split(",").each do |item| %>      
        <li><%= item.titleize %></li>
      <% end %>
    </ul>    
   </div>
  <div class='mt-4 text-2xl text-teal-800'><%= @recipe.directions %></div>
</div>

<div class='py-6 px-2'>
  <%= link_to 'Edit Recipe', edit_recipe_path(@recipe), class: 'inline btn-teal btn-teal:hover' %>
  <%= link_to "Delete Recipe", recipe_path(@recipe), method: :delete, class: 'inline btn-teal btn-teal:hover',
      data: { confirm: "You sure you want to delete this recipe?" } %>
</div>


