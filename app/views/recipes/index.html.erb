<h2 class='text-4xl mb-2'>Recipes</h2>

<div class='md:px-32 py-8 w-full'>
  <div class='shadow overflow-hidden rounded border-b border-gray-200'>
<table class='min-w-full bg-white'>
  <thead class='bg-teal-500 text-black'>
    <tr>
      <th class='w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm'>Recipe Name</th>
      <th class='w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm'>Serving Size</th>
      <th class='text-left py-3 px-4 uppercase font-semibold text-sm'>Created</th>
      <th class='text-left py-3 px-4 uppercase font-semibold text-sm'>Actions</th>
    </tr>
  </thead>
  <tbody class='text-gray-700'>
    <% @recipes.each do |recipe| %>
      <tr>
        <td class='w-1/3 text-left py-3 px-4'><%= link_to recipe.recipe_name, recipe, class: 'hover:text-teal-700' %></td>
        <td class='w-1/3 text-left py-3 px-4'><%= recipe.serving_size %></td>
        <td class='text-left py-3 px-4'><%= time_ago_in_words recipe.created_at %><%= " ago" %></td>
        <td class='text-left py-3 px-4'><%= link_to 'Edit', '#' %></td>
      </tr>   
    <% end %> 
  </tbody>
</table>
</div>
</div>

<%= link_to 'New Recipe', new_recipe_path, class: 'py-2' %>